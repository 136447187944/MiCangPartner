<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/shallow_gray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140dp"
                android:background="@mipmap/bg_own">
                <ImageView
                    android:id="@+id/head_pic"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_30dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:src="@mipmap/head_pic" />
                <TextView
                    android:id="@+id/username_tv"
                    android:layout_marginTop="@dimen/_45dp"
                    android:text="Your name"
                    android:textSize="@dimen/_20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/head_pic"/>
                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_toRightOf="@+id/head_pic"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    android:paddingBottom="@dimen/_2dp"
                    android:paddingTop="@dimen/_2dp"
                    app:alpha="0.5"
                    android:textColor="@color/white"
                    android:text="未实名"
                    android:textSize="@dimen/_17sp"
                    android:gravity="center"
                    android:background="@drawable/status"
                    android:layout_below="@+id/username_et"
                    android:layout_alignBottom="@+id/head_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sign_tv"
                    android:padding="@dimen/_10dp"
                    app:alpha="0.5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17sp"
                    android:text="签到"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_30dp"
                    android:background="@drawable/status"
                    android:layout_below="@+id/username_et"
                    android:layout_alignBottom="@+id/head_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/credit_layout"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:src="@mipmap/friend_credit"
                    android:id="@+id/credit_iv"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_30dp" />
                <TextView
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="积分"
                    android:textSize="@dimen/_17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center"
                    android:text="20积分"
                    android:textSize="@dimen/_17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/_15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/back_right"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_30dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>