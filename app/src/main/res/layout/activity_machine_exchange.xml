<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.MachineExchangeActivity">
    <include layout="@layout/title_ber"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140dp"
        android:src="@mipmap/goods_banner_img"
        android:paddingBottom="@dimen/_10dp"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_left_machine" />
        <include layout="@layout/layout_right_machine"/>
    </LinearLayout>
</LinearLayout>