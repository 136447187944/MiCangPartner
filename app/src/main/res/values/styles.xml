<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--字体大小样式-->
    <style name="_15sp">
        <item name="android:textSize">@dimen/_15sp</item>
    </style>
    <style name="_12sp">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>
    <style name="font_15sp"> <!--字体大小15sp-->
        <item name="android:textSize">@dimen/_15sp</item>
    </style>


    <!--边距样式-->
    <style name="_60dp_15sp" parent="_12sp">
        <item name="android:layout_marginLeft">@dimen/_45dp</item>
        <item name="android:layout_marginRight">@dimen/_45dp</item>
    </style>
    <style name="margin_left_right_10dp">
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
        <item name="android:layout_marginRight">@dimen/_10dp</item>
    </style>
    <style name="_marginTop_20dp" parent="_60dp_15sp">
        <item name="android:layout_marginTop">@dimen/_20dp</item>
    </style>
    <style name="gravity_center">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="_15sp_1" parent="shallow_purple">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:text">@string/test_code</item>
        <item name="android:paddingRight">@dimen/_5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
    </style>


   <!--颜色样式-->
    <style name="shallow_purple"> <!--浅紫色-->
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="gray">
        <item name="android:textColor">@color/gray</item>
    </style>


    <!--对其方式样式-->
    <style name="title_style" parent="font_15sp">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--主页底部导航栏-->
    <style name="bottom_navigate">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--提示框-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="machine_exchange_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="machine_exchange_layout">
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
            <item name="android:paddingBottom">@dimen/_10dp</item>
    </style>
    <style name="machine_exchange_image">
        <item name="android:layout_height">@dimen/_15dp</item>
        <item name="android:layout_width">@dimen/_15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
